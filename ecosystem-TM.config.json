{
  "apps": [
    {
      "name": "TM",
      "script": "server.js",
      "instances": 1,
      "exec_mode": "cluster",
      "listen_timeout": 60000,
      "restart_delay": 60000,
      "maxMemoryRestart": "12G",
      "interpreterArgs": ["--stack_trace_limit=0", "--max_old_space_size=12000"],
      "mergeLogs": true,
      "out_file": "logs/out.log",
      "error_file": "logs/err.log"
    }
  ]
}
