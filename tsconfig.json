{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "typeRoots": ["node_modules/@types"]
  },
  "include": [
    "**/*"
  ],
  "exclude": [
    "coverage",
    "node_modules"
  ]
}
