{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "typeRoots": ["node_modules/@types", "node_modules/bunyan-middleware/index.d.ts"]
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "dist",
    "lib",
    "coverage",
    "**/*.spec.ts",
    "**/*.int-spec.ts",
    "node_modules"
  ]
}
